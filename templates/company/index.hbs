<div id="subheader">
  <div class="container">

    <h1 class="centered">npm is the package manager for JavaScript</h1>

    <div id="home-stats">
      {{#if totalPackages}}
        <div class="stat icon-package-hex">
          <strong>{{totalPackages}}</strong>
          total packages
        </div>
      {{/if}}

      {{#if downloads.day}}
        <div class="stat icon-cal-24hours">
          <strong>{{downloads.day}}</strong>
          downloads in the last day
        </div>
      {{/if}}

      {{#if downloads.week}}
        <div class="stat icon-cal-7days">
          <strong>{{downloads.week}}</strong>
          downloads in the last week
        </div>
      {{/if}}

      {{#if downloads.month}}
        <div class="stat icon-cal-30days">
          <strong>{{downloads.month}}</strong>
          downloads in the last month
        </div>
      {{/if}}
    </div>

  </div>
</div>

<h2 class="centered">
  <a id="staff-picks" href="#staff-picks">npm staff picks</a>
</h2>
<ul class="columnar">
  {{#each staff-picks}}
    <li>{{> package-widget}}</li>
  {{/each}}
</ul>

<h2 class="centered">
  <a id="explicit" href="#explicit">packages people 'npm install' a lot</a>
</h2>
<ul class="columnar">
  {{#each explicit}}
    <li>{{> package-widget}}</li>
  {{/each}}
</ul>

<h2 class="centered">
