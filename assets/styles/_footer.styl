footer
  margin 80px 0 80px 0

  h3, ul.links
    margin-left 20px

  h3
    text-transform lowercase
    line-height 2
    border-bottom 1px solid greigh6

  ul.links
    @extend .vanilla-list
    li
      line-height 2
      margin 0
      padding 0
      display block
      text-transform lowercase
      // border-bottom 1px solid greigh5
      a
        text-decoration none
        &:hover
          text-decoration underline

#npm-loves-you
  margin-top 80px
  display inline-block
  color greigh4
  text-decoration none
  &:before, &:after
    content "\2665"
    line-height 3
    padding-top 5px
    color rgba(npmred, 0)
    font-size 14px
    transition all 0.3s
  &:before
    padding-right -5px
  &:after
    padding-left -5px
  &:hover
    color rgba(npmred, 1)
    &:before, &:after
      color rgba(npmred, 1)
    &:before
      padding-right 5px
    &:after
      padding-left 5px
